<br><br>
<p id="notice"><%= notice %></p>

<div class="row">
    <h5 style="margin-top: 70px">Items</h5>
    <hr style="margin-top: 0; margin-bottom: 40px;">
    
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Skuid</th>
          <th>Description</th>
          <th>Price</th>
          <th>Length</th>
          <th>Width</th>
          <th>Height</th>
          <th>Weight</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.skuid %></td>
            <td><%= item.description %></td>
            <td><%= item.price %></td>
            <td><%= item.length %></td>
            <td><%= item.width %></td>
            <td><%= item.height %></td>
            <td><%= item.weight %></td>
            <td><%= link_to 'Show', item %></td>
            <td><%= link_to 'Edit', edit_item_path(item) %></td>
            <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>

